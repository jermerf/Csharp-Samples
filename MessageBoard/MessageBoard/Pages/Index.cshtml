@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["CurrentPage"] = "home";
}

    <script>
    var username = "@Model.Username"
    </script>

<h1>@Model.Username</h1>
<div id="loginBox" class="text-center">
    <div class="card">
        <div class="card-body">
            <input id="loguser" value="stephen" class="form-control" />
            <input id="logpass" value="harper" type="password" class="form-control" />
            <button onclick="login()" class="btn btn-success">Login</button>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <input id="reguser" value="" class="form-control" />
            <input id="regpass" value="" type="password" class="form-control" />
            <input id="regpassconfirm" value="" type="password" class="form-control" />
            <button onclick="register()" class="btn btn-success">Register</button>
            <div id="registerStatus" class="alert" role="alert"></div>
        </div>
    </div>
</div>

<div id="messageBoard">
    <form method="post">
        <input name="content" class="form-control"/>
        <input type="submit" class="btn btn-success" />
    </form>

    @foreach (var post in Model.Posts) {
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@post.content</h5>
            <h6 class="card-subtitle mb-2 text-muted">@post.postedOn</h6>
            <p class="card-text">@post.userId</p>
        </div>
    </div>
    }
</div>
