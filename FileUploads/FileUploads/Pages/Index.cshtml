@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-center">
        <form method="post" enctype="multipart/form-data">
            <input name="password" placeholder="password" type="password" />
            <input name="UploadedFile" type="file" asp-for="UploadedFile" />
            <input type="submit" />
        </form>
        <div class="list-group">
            @foreach (var f in Model.fileList) {
                <a href="/uploads/@f.name" class="list-group-item list-group-item-action">@f.name</a>
                @if (f.isImage) {
                    <img class="uploaded" src="uploads/@f.name" />
                }

            }
        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/uploads/dwawg.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/uploads/java.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/uploads/dwawg.png" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
